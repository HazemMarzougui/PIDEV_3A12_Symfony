<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+3/z5GtT98nq+8MPd2I5TUkZjPk5O3hMhXfFJGa" crossorigin="anonymous">
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Styling for reset password form */
        .reset-form {
            background: #f2f7ff;
            padding: 2em;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Limit form width for better readability */
            margin: auto; /* Center the form horizontally */
            text-align: center; /* Center the text content */
        }

        .reset-form input {
            background: #fff;
            padding: 1em 1em 1em 40px;
            border-radius: 10px;
            color: #555;
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 1em; /* Adjusted padding for icon */
            width: 100%; /* Set input width to 100% */
            box-sizing: border-box; /* Include padding and border in the width */
        }

        .reset-form input::placeholder {
            color: #999;
        }

        .reset-form button {
            padding: 1em 2em;
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .reset-form button:hover {
            background: #0056b3;
        }

        .reset-form button i {
            margin-right: 0.5em;
        }
    </style>
</head>
<body>
    <div class="screen screen-1 d-flex justify-content-center align-items-center">
        <img src="https://img.hotimg.com/logoe0577f94706fddae.png" alt="Logo" class="logo">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="reset-form">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        <h1 class="text-center mb-4">Reset Your Password</h1>

                       <form action="{{ path('process_password_reset') }}" method="post">
                            <div class="mb-3 position-relative">
                                
                                <i class="fas fa-envelope position-absolute top-50 start-0 translate-middle-y"> </i>
                         
                                <input type="email" name="emailAddress" class="form-control" placeholder="Enter your email address here!" required>
                            </div>
                            <div class="mb-3 position-relative">
                               
                                <i class="fas fa-phone position-absolute top-50 start-0 translate-middle-y"> </i>
                                
                                <input type="text" name="phoneNumber" class="form-control" placeholder="Enter your phone number here!" required>
                            </div>
                            <div class="mb-3 d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary" name="sendMethod" value="email">
                                    <i class="bi bi-envelope-fill"></i>Send Email
                                </button>
                                <button type="submit" class="btn btn-primary" name="sendMethod" value="sms">
                                    <i class="bi bi-chat-dots-fill"></i>Send SMS
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <a href="{{ path('app_register') }}">Create Account</a>
            <a href="{{ path('app_base') }}" class="home"><i class="fas fa-home"></i></a>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-8luFKwaWmDZLwBY3ZqveK9zjxICP6r8w8t8wR9GbJGV9jNrmnI0jK3bxnUVDDoS5" crossorigin="anonymous"></script>
    
</body>
</html>
