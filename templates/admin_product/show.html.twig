{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>MainPicture</th>
                <td><img src="{{ asset('uploads/' ~ product.mainPicture) }}" alt="Product Image" style="width: 200px; height: 200px;">
</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
        </tbody>
    </table>

<button type="button" class="btn btn-secondary"><a href="{{ path('app_admin_product_index') }}">back to list</a></button>
                <button type="button" class="btn btn-primary">  <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a></button>



    {{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
